<%- include ('./includes/head.ejs') %>

      <div class="dash-main">
        <div class="dash-main-top">
          <h2>Manage User Accounts</h2>
        </div>

        <div class="dash-main-body">
          <table class="info-list-table">
            <thead>
              <tr>
                <th>First Name.</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Options</th>
              </tr>
            </thead>

            <tbody>
              <% if(users.length > 0) { %> 
                <% for(let user of users) { %>
                <tr>
                  <td><%= user.firstName %></td>
                  <td><%= user.lastName %></td>
                  <td><%= user.email %></td>
                  <td><%= user.phoneNumber %></td>
                  <td class="users">
                    <a href="/user-profile-view/<%= user._id%>" class="user-option">Edit</a>
                    <form action="/delete-user" method="POST">
                      <input type="hidden" value="<%= user._id %>" name="userId">
                      <button class="user-option">Delete Account</button> 
                  </form>
                    <!-- <a href="" class="user-option" >Delete</a> -->
                  </td>
                </tr>
                <% } %>
            <% } else { %>
              <h2>nothing to displayh2>
            <% } %>
                                  
            </tbody>
          </table>
        </div>
        <% if (fetchError) {%>
          <h3> <%= fetchError%></h3> 
           
      <%}%>
        <div class="date-time">
          <%- include ('./includes/date.ejs') %>
        </div>
      </div>
      <%- include ('./includes/sidePane.ejs') %>
    </div>
  </body>
</html>
